# random convenience aliases
alias f='vim ~/journal/$(date +%Y/%m-%d)/furls'
alias f2='vim ~/journal/$(date +%Y/%m-%d)/furls2'

# project-specific aliases
alias cd-myproject='cd ~/w/dj-myproject/myproject'

