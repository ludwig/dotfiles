# ~/.bash_aliases: This file is meant to be sourced from ~/.bashrc

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -ip'
alias df='df -h'
alias less='less -r'
alias vm='vim -X'
alias x='exit'

# The -G option works on macos (linux uses --color)
alias ls='ls -GF'

# Other random aliases
alias cam='conda activate lab'
