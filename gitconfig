# ~/.gitconfig
# http://git.or.cz/gitwiki/Aliases
# http://betterexplained.com/articles/aha-moments-when-learning-git/
# http://mislav.uniqpath.com/2010/07/git-tips/
# http://cheat.errtheblog.com/s/git/
# http://stackoverflow.com/questions/348170/undo-git-add
# http://stackoverflow.com/questions/267761/what-does-your-gitconfig-contain
# http://news.ycombinator.com/item?id=2480522
# https://coderwall.com/p/euwpig
# https://news.ycombinator.com/item?id=5837920
# https://news.ycombinator.com/item?id=6641826

[user]
	name = Luis Armendariz
	email = luis.armendariz@gmail.com

[core]
	excludesfile = ~/.gitignore

[branch "master"]
	remote = origin
	merge = refs/heads/master

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status -sb
	ci = commit
	br = branch
	co = checkout
	df = diff
    df2 = diff --patience --ignore-space-at-eol -b -w --ignore-blank-lines
	ds = diff --stat -M -w
	dsc = diff --stat --cached -M -w
	dw = diff --color-words
	dc = diff --cached
	ws = show --color-words
	wd = diff --color-words
	wd2 = diff --word-diff
	l = log --pretty='tformat:%h %an (%ar): %s'
	la = log --pretty='format:%ad %h (%an): %s' --date=short
	ly = log --pretty='tformat:%h %an (%ar): %s' --since=yesterday
	lp = log -p
	ll = log --oneline --decorate
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lol2 = log --graph --pretty=format:'%C(red)%h%C(reset) %C(yellow)%d%C(reset)%s %C(green)%an %C(bold black)%cr%C(reset)' --abbrev-commit --date=relative
	oneline = log --pretty=oneline
	summary = log --oneline
	changes = log --oneline --reverse
	view = log --stat -b -p --no-prefix
	tree = log --graph --oneline --decorate
	last = log @{1}..
	rank = shortlog -sn --no-merges
	ls = ls-files
	cancel = reset --soft HEAD^
	oops = reset --soft HEAD^ --
	unstage = reset HEAD --
	unadd = reset HEAD --
	unadd-new = rm --cached
	staged = diff --staged
	info = config --list
	tags = tag -n1 -l
	cp = cherry-pick
	pom = push origin master
	com = checkout master
	sup = submodule update
	ri = rebase --interactive --autosquash
	# usage example: git w -n5
	w = whatchanged
	# given any git object, try to show it briefly
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	# usage example: git whatsnew <other_branch>
	# show commits that are in the current branch, but not in <other_branch>.
	whatsnew = !sh -c 'git shortlog --format=\"%h %s\" $1..HEAD' -
	# search for a given string in all patches and print commit messages
	searchcommits = "!f() { query=\"$1\"; shift; git log -S\"$query\" \"$@\"; }; f \"$@\""
	slog = log --pretty=format:"%C(auto,yellow)%h%C(auto)%d\\ %C(auto,reset)%s\\ \\ [%C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)]"
	glog = log --graph --pretty=format:"%C(auto,yellow)%h%C(auto)%d\\ %C(auto,reset)%s\\ \\ [%C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)]"
	gflog = log -p --cc --graph --decorate
	wtf = log --pretty=format:"%C(auto,yellow)%h%C(auto)%d%C(auto,reset)\\ by\\ %C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)%n\\ %s%n" --stat
	unci = reset HEAD^
	uncommit = reset HEAD^
    commit-empty = commit --allow-empty

[url "git://github.com/"]
	insteadOf = "github:"

[url "git@github.com:"]
	pushInsteadOf = "github:"

[url "git://gitorious.org/"]
	insteadOf = "gitorious:"

[url "git@gitorious.org:"]
	pushInsteadOf = "gitorious:"

[mergetool]
	keepBackup = true
	prompt = false
[push]
	default = current
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
